# .github/workflows/release.yml

name: Create Live Release

# This workflow is triggered ONLY when a new tag starting with 'v' is pushed.
# Examples: v1.0, v1.0.1, v1.2.3-beta
on:
  push:
    tags:
      - 'v*'

jobs:
  build-and-release:
    name: Build and Release
    # Use the latest version of Ubuntu for the build environment
    runs-on: ubuntu-latest

    steps:
      # Step 1: Check out your repository's code
      - name: Checkout repository
        uses: actions/checkout@v4

      # Step 2: Set up Java Development Kit (JDK) 17
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: maven # Caches dependencies for faster builds

      # Step 3: Build the project with Maven
      # This compiles the code and packages it into JAR files
      - name: Build with Maven
        run: mvn -B package --file pom.xml

      # Step 4: Create the GitHub Release and upload the built JARs
      - name: Create Release and Upload Build Artifacts
        uses: softprops/action-gh-release@v1
        with:
          # This defines which files to upload as release assets.
          # It finds the .jar files in the 'target' directory of each module.
          files: |
            ControlBans/target/*.jar
            ControlBans-Bungee/target/*.jar
            ControlBans-Velocity/target/*.jar
        env:
          # The GITHUB_TOKEN is automatically created by Actions to authenticate.
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
